# Automata Workflows Environment Configuration

# Temporal Configuration
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=automata
TEMPORAL_TASK_QUEUE=automata-workflows

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/automata
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# External Service Tokens
GITHUB_TOKEN=your_github_personal_access_token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
JIRA_TOKEN=your-jira-api-token
JIRA_URL=https://your-company.atlassian.net

# Modal Configuration
MODAL_TOKEN=your-modal-token
MODAL_WORKSPACE=your-modal-workspace

# AI/ML Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_CORRELATION_ID_ENABLED=true

# Monitoring and Observability
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Security
SECRET_KEY=your-secret-key-for-signing
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_SECURITY_SCANNING=true
ENABLE_PERFORMANCE_MONITORING=true

# Rate Limiting
GITHUB_RATE_LIMIT=5000
SLACK_RATE_LIMIT=100
JIRA_RATE_LIMIT=1000

# Timeouts (in seconds)
HTTP_TIMEOUT=30
TEMPORAL_ACTIVITY_TIMEOUT=300
TEMPORAL_WORKFLOW_TIMEOUT=3600

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_INITIAL_INTERVAL=1
RETRY_MAXIMUM_INTERVAL=60
RETRY_BACKOFF_COEFFICIENT=2.0